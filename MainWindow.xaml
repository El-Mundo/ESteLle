<Window x:Class="EsteLle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsteLle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="383*"/>
        </Grid.RowDefinitions>
        <Button Content="Gen" HorizontalAlignment="Left" Margin="74,137,0,0" VerticalAlignment="Top" Height="48" Width="140" Click="Button_Click" Grid.Row="1"/>
        <Image x:Name="ImagePanel" HorizontalAlignment="Left" Height="217" Margin="342,26,0,0" VerticalAlignment="Top" Width="242" Grid.RowSpan="2"/>
        <Label Content="Path" HorizontalAlignment="Left" Height="32" Margin="10,48,0,0" VerticalAlignment="Top" Width="129" FontFamily="Arial Black" Grid.RowSpan="2"/>
        <TextBox x:Name="PathPanel" HorizontalAlignment="Left" Height="43" Margin="10,33,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Grid.Row="1"/>
        <TextBox x:Name="ResultPanel" HorizontalAlignment="Center" Height="157" Margin="0,216,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Grid.Row="1"/>

    </Grid>
</Window>
